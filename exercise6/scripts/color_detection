#!/usr/bin/env python
from __future__ import print_function
from cv_bridge import CvBridge, CvBridgeError
from sensor_msgs.msg import Image
from matplotlib import pyplot as plt
from joblib import load
from sklearn.svm import SVC

import sklearn
import cv2
import rospy
import numpy as np
import sys

bridge = CvBridge()
clf = load(sys.path[0] + '/../color_classifier/svc.joblib')
colors = ['red', 'green', 'blue', 'yellow', 'white', 'black']

def plot_hist(h, s):
    plt.plot(h)
    plt.xlim([0,s])
    plt.show()

def calc_hist(image, channel, hist_r, nbins):
    hist_range = (0, hist_r)

    # OpenCV function is faster (around 40X) than np.histogram()
    hist = cv2.calcHist([image], [channel], None, [nbins], hist_range, accumulate=False)

    # normalize histogram
    hist_sum = np.sum(hist)
    hist = np.divide(hist, hist_sum)
    return np.concatenate(hist)

def cylinder_call(I):
    # input is 1D image!
    rgb_I = bridge.imgmsg_to_cv2(I, "bgr8")
    hsv_I = cv2.cvtColor(rgb_I, cv2.COLOR_BGR2HSV)

    r_hist = calc_hist(rgb_I, 0, 256, 64)
    g_hist = calc_hist(rgb_I, 1, 256, 64)
    b_hist = calc_hist(rgb_I, 2, 256, 64)

    h_hist = calc_hist(hsv_I, 0, 180, 30)
    s_hist = calc_hist(hsv_I, 1, 256, 64)
    v_hist = calc_hist(hsv_I, 2, 256, 64)

    # merge hists
    hists = np.concatenate([h_hist, s_hist, v_hist, r_hist, g_hist, b_hist])

    # run clf on hists
    color = clf.predict([hists])[0]
    print('prediction :', colors[color], 'cylinder')
    # TODO: publish color?

def ring_call():
    pass

def main():
    rospy.init_node('color_detection')
    rospy.Subscriber('cylinder_img', Image, cylinder_call)

    print(clf)

    rospy.spin()

if __name__ == '__main__':
    main()